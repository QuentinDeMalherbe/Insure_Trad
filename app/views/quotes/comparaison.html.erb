    <div class='w-25 p-2 sub-title-1 d-flex align-items-center justify-content-between'>
      <div class='w-75'>Reconstitution de la garantie plancher</div>
      <div style="margin-top:40px">
        <div class=''>1 fois</div>
        <div style='margin-top:33px;margin-bottom:33px'>2 fois</div>
        <div class=''>3 fois</div>
      </div>

    </div>

    <div class='flex-grow-1 p-2 '>
      <div class='mb-4'>
        <div class=" text-important-bold text-semibold ">
          Prime honoraires annuelle H.T
        </div>
      </div>

      <div class='mb-4'>
        <div class="d-flex  mt-4">
          <div class=' custom-checkbox-circle'>
            <div>
            </div>
          </div>
          <div>
            <p id='r_1'class='text-important-bold text-semibold ml-4 mb-0'
              down='<%= number_with_delimiter(@quote.r_1_down, delimiter: " ") %> €'
              normal='<%= number_with_delimiter(@quote.reconstitution_1, delimiter: " ") %> €'
              up='<%= number_with_delimiter(@quote.r_1_up, delimiter: " ") %> €'
            >
              <%= number_with_delimiter(@quote.reconstitution_1, delimiter: " ") %> €
            </p>
            <p class='sub-title-1 ml-4'></p>
          </div>
        </div>
      </div>

      <div class='mb-4'>
        <div class="d-flex  mt-4">
          <div class=' custom-checkbox-circle'>
            <div>
            </div>
          </div>
          <div>
            <p id='r_2'class='text-important-bold text-semibold ml-4 mb-0'
              down='<%= number_with_delimiter(@quote.r_2_down, delimiter: " ") %> €'
              normal='<%= number_with_delimiter(@quote.reconstitution_2, delimiter: " ") %> €'
              up='<%= number_with_delimiter(@quote.r_1_up, delimiter: " ") %> €'
            >
              <%= number_with_delimiter(@quote.reconstitution_2, delimiter: " ") %> €
            </p>
            <p class='sub-title-1 ml-4'></p>
          </div>
        </div>
      </div>
      <div>
        <div class="d-flex  mt-4">
          <div class=' custom-checkbox-circle'>
            <div>
            </div>
          </div>
          <div>
            <p id='r_3'class='text-important-bold text-semibold ml-4 mb-0'
              down='<%= number_with_delimiter(@quote.r_3_down, delimiter: " ") %> €'
              normal='<%= number_with_delimiter(@quote.reconstitution_3, delimiter: " ") %> €'
              up='<%= number_with_delimiter(@quote.r_3_up, delimiter: " ") %> €'
            >
              <%= number_with_delimiter(@quote.reconstitution_3, delimiter: " ") %> €
            </p>
            <p class='sub-title-1 ml-4'></p>
          </div>
        </div>
      </div>
    </div>

    <div class='w-33 p-2 '>
      <div class='mb-4'>
        <div class='mb-4'>
          <div class=" text-important-bold text-semibold ">
            Prime honoraires annuels H.T.
          </div>
        </div>
        <div class="d-flex  mt-4">
          <div class=' custom-checkbox-circle'>
            <div>
            </div>
          </div>
          <div>
            <p class='text-important-bold text-semibold ml-4 mb-0'  >
              <%= number_with_delimiter(@quote.reconstitution_1, delimiter: " ") %> €
            </p>
            <p class='sub-title-1 ml-4'></p>
          </div>
        </div>
      </div>
      <div class='mb-4'>
        <div class="d-flex  mt-4">
          <div class=' custom-checkbox-circle'>
            <div>
            </div>
          </div>
          <div>
            <p class='text-important-bold text-semibold ml-4 mb-0'  >
              <%= number_with_delimiter(@quote.reconstitution_2, delimiter: " ") %> €
            </p>
            <p class='sub-title-1 ml-4'></p>
          </div>
        </div>
      </div>
      <div>
        <div class="d-flex  mt-4">
          <div class=' custom-checkbox-circle'>
            <div>
            </div>
          </div>
          <div>
            <p class='text-important-bold text-semibold ml-4 mb-0'  >
              <%= number_with_delimiter(@quote.reconstitution_3, delimiter: " ") %> €
            </p>
            <p class='sub-title-1 ml-4'></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="d-flex  align-items-center border-top">
    <div class='w-25 p-2 sub-title-1'>
      <%= link_to  root_path do %>
        <div class='btn btn-danger button-250 d-flex '>
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M8 6V4C8 3.46957 8.21071 2.96086 8.58579 2.58579C8.96086 2.21071 9.46957 2 10 2H14C14.5304 2 15.0391 2.21071 15.4142 2.58579C15.7893 2.96086 16 3.46957 16 4V6M19 6V20C19 20.5304 18.7893 21.0391 18.4142 21.4142C18.0391 21.7893 17.5304 22 17 22H7C6.46957 22 5.96086 21.7893 5.58579 21.4142C5.21071 21.0391 5 20.5304 5 20V6H19Z" stroke="white" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M14 11V17" stroke="white" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M10 11V17" stroke="white" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <div class='ml-4'>
            Annuler
          </div>
        </div>
      <% end %>
    </div>
    <div class='flex-grow-1 p-2 '>
      <%= link_to signature_quote_path(id: @quote.id ), target:'_blank', id: 'customQuote' do %>
        <div class='btn btn-primary w-100' >
          Acheter
        </div>
      <% end %>
    </div>
    <div class='w-33 p-2 '>
      <%= link_to signature_quote_path(id: @quote.id ) , target:'_blank', id: 'normalQuote' do %>
