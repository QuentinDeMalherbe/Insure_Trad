<% if params["locale"] === "fr" %>
<% langage = :second %>
<% elsif params["locale"] === "en" %>
<% langage = :third %>
<% else %>
<% langage = :third %>
<% end %>

<div class="container ">
  <h2 id='comparaison' class='mb-5 title'>Devis personnalisé</h2>
  <div class="d-flex">
    <div class='w-25'></div>
    <div class='flex-grow-1 small-title'>Devis personnalisé</div>
    <div class='w-33 small-title'>Devis initial</div>
  </div>

  <%# seuil %>
  <div class="d-flex bg-light-turquoise align-items-center border-top">
    <div class='w-25 p-2 sub-title-1'> Seuil d'intervention</div>
    <div class='flex-grow-1 p-2 '><p class='text-important-bold text-semibold mb-0'><%= number_with_delimiter(@quote.seuil, delimiter: " ") %> €</p></div>
    <div class='w-33 p-2 '><p class='text-important-bold text-semibold mb-0'><%= number_with_delimiter(@quote.seuil, delimiter: " ") %> €</p></div>
  </div>

  <%# guarantie %>
  <div class="d-flex  align-items-center border-top">
    <div class='w-25 p-2 sub-title-1'>Garantie plancher </div>
    <div class='flex-grow-1 p-2 '>
      <p class='text-important-bold text-semibold mb-0'><%= number_with_delimiter(@quote.guarantie, delimiter: " ") %> €</p>

    </div>
    <div class='w-33 p-2 '>
      <p class='text-important-bold text-semibold mb-0'><%= number_with_delimiter(@quote.guarantie, delimiter: " ") %> €</p>

    </div>
  </div>

  <%# guarantie a et b %>
  <div class="d-flex bg-light-turquoise align-items-center border-top">
    <div class='w-25 p-2 sub-title-1'>Garantie Click & Cover </div>

    <div class='flex-grow-1 p-2 '>
      <div class='mb-2'>
        <label for="client-a" class='text-important-bold text-semibold mb-2 pb-0'>Client grade A</label>

        <div class='text-important-bold text-semibold mb-2'>
          <select id='grade_a' name="client-a" id="pet-select" class='w-50 p-2 rounded-2 bg-light-turquoise text-important-bold text-semibold border-light-turquoise'>
              <option value="down"><%= number_with_delimiter(@quote.g_a_down, delimiter: " ") %> €</option>
              <option value="normal" selected><%= number_with_delimiter(@quote.guarantie_a, delimiter: " ") %> €</option>
              <option value="up"><%= number_with_delimiter(@quote.g_a_up, delimiter: " ") %> €</option>
          </select>
        </div>

      </div>
      <div>
        <label for="client-a" class='text-important-bold text-semibold mb-2 pb-0'>Client grade B</label>

        <div class='text-important-bold text-semibold mb-2'>
          <p id='grade_b' class='text-important-bold text-semibold mb-2'
            down='<%= number_with_delimiter(@quote.g_a_down / 2, delimiter: " ") %> €'
            normal='<%= number_with_delimiter(@quote.guarantie_a / 2, delimiter: " ") %> €'
            up='<%= number_with_delimiter(@quote.g_a_up / 2, delimiter: " ") %> €'
          >
            <%= number_with_delimiter(@quote.guarantie_b, delimiter: " ") %> €
          </p>

        </div>
      </div>
    </div>

    <div class='w-33 px-2 pb-2 '>
      <div class='mb-2'>
        <p class='text-important-bold text-semibold mb-2'>Client grade A</p>
        <p class='text-important-bold text-semibold mb-2'><%= number_with_delimiter(@quote.guarantie_a, delimiter: " ") %> €</p>
        <p class='sub-title-1 mb-35'></p>
      </div>
      <div>
        <p class='text-important-bold text-semibold mb-2'>Client grade B</p>
        <p class='text-important-bold text-semibold mb-2'><%= number_with_delimiter(@quote.guarantie_b, delimiter: " ") %> €</p>

      </div>
    </div>
  </div>

  <%# prime %>
  <div class="d-flex  align-items-center border-top">
    <div class='w-25 p-2 sub-title-1'>Prime honoraires annuels H.T. </div>
    <div class='flex-grow-1 p-2 '>
      <p id='prime'class='text-important-bold text-semibold mb-0'
        down='<%= number_with_delimiter(@quote.prime_down, delimiter: " ") %> €'
        normal='<%= number_with_delimiter(@quote.prime, delimiter: " ") %> €'
        up='<%= number_with_delimiter(@quote.prime_up, delimiter: " ") %> €'
      >
        <%= number_with_delimiter(@quote.prime, delimiter: " ") %> €
        </p>
      <p class='sub-title-1'>Sans reconstitution de la garantie plancher</p>
    </div>
    <div class='w-33 p-2 '>
      <p class='text-important-bold text-semibold mb-0'><%= number_with_delimiter(@quote.prime, delimiter: " ") %> €</p>
      <p class='sub-title-1'>Sans reconstitution de la garantie plancher</p>
    </div>
  </div>

  <%# nombre de consulation %>
  <div class="d-flex  bg-light-turquoise align-items-center border-top">
    <div class='w-25 py-3 pl-2 sub-title-1'>Nombre de consultations Click & Cover </div>
    <div class='flex-grow-1 py-3 pl-2 '>
      <p class='text-important-bold text-semibold mb-0'><%= number_with_delimiter(@quote.consultation_number, delimiter: " ") %> </p>
    </div>
    <div class='w-33 py-3 pl-2'>
      <p class='text-important-bold text-semibold mb-0'><%= number_with_delimiter(@quote.consultation_number, delimiter: " ") %> </p>
    </div>
  </div>

  <%# reconstitution %>
