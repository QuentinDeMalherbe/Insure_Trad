<% if params["locale"] === "fr" %>
<% langage = :second %>
<% elsif params["locale"] === "en" %>
<% langage = :third %>
<% else %>
<% langage = :third %>
<% end %>

<div class="container container-custom">
  <div class="title my-4">
    <h2>Policy Electronical signature</h2>
    <h3>Insured Declaration</h3>
  </div>
<%= simple_form_for :police_cinq_million, url: '#', method: :post do |f| %>

  <%= f.input :first,
    as: :radio_buttons,
    label: 'Select your policy Inception:',
    collection: [
      ["Today : #{Date.today}", true],
      ["Next month : #{Date.today.at_beginning_of_month.next_month}", false]
    ],
    item_wrapper_class: 'form-check form-check-inline',
    input_html: { class: 'form-check-input' },
    label_html: { class: 'form-check-label' } %>
<%= f.input :two,
  as: :radio_buttons,
  label: 'Select your insurance premium terms of payment (annual fees are payable up front)',
  collection: [
    ['Monthly Payment', 'monthly'],
    ['Quarterly Payment â€“ Upfront payment at inception date (2% discount)', 'quarterly'],
    ['Upfront payment at inception date (5% discount)', 'upfront']
  ],
  item_wrapper_class: 'form-check',
  input_html: { class: 'form-check-input' },
  item_label_class: 'form-check-label',
  item_label_proc: ->(label, value) {
    label
      .gsub(/\((\d+% discount)\)/, '<em>(\1)</em>')
      .html_safe
  }
%>

<p class="mt-2">Fill out your bank details for an automatic bank debit of the premium and fees
payment</p>
<div class="row">
  <div class="col-md-6">
    <%= f.input :account_holder_name,
      label: 'Name of the bank account holder' %>
  </div>

  <div class="col-md-6">
    <%= f.input :bic,
      label: 'BIC Number' %>
  </div>
</div>

<%= f.input :iban,
  label: 'IBAN Number' %>

<%= f.input :address,
  label: 'Address',
  as: :text,
  input_html: { rows: 3 } %>

  <%= f.input :four,
  as: :radio_buttons,
  label: 'Loss payee: do you want to name a Loss Payee under your InsureTrade policy',
  collection: [
    ['Yes', true],
    ['No' , false]
  ],
  item_wrapper_class: 'form-check form-check-inline',
  input_html: { class: 'form-check-input' },
  label_html: { class: 'form-check-label' } %>

  <div class="row">
    <div class="col-md-6">
      <%= f.input :loss_payee_name,
        label: 'Loss payee name' %>
    </div>

    <div class="col-md-6">
      <%= f.input :loss_payee_address,
        label: 'Loss payee Address' %>
    </div>
  </div>

<% end %>
  <%= link_to final_2_quotes_path(id: @quote.id ) , id: 'normalQuote' do %>
        <div class='btn btn-primary mb-4  ' >
          Next
        </div>
      <% end %>
</div>

