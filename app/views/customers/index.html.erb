<div class="container">

  <h2 class="title text-center">Rechercher votre client</h2>
  <%= form_tag customers_path, method: :get do %>
    <div class="d-flex mb-6 ">
      <%= select_tag(:search,
      options_from_collection_for_select(@select_customers, "id", "compagny_name", @customer),
      include_blank: true,
      class:"form-control form-select",
      placeholder: "#{t('customer.index.placeholder1' )}")
      %>
<%
=begin%>

      <%= text_field_tag :search,
          params[:search],
          class: "form-control",
          placeholder: "#{t('customer.index.placeholder1' )}"
      %>
<%
=end%>
      <%= submit_tag "#{t('customer.index.button1' )}", class: "btn btn-primary  ml-4" %>
    </div>
  <% end %>
  <div class="row overflow-auto">
    <div class="col-sm-8 offset-sm-2 overflow-auto">
      <div id="customers" class ="<%= @hide ? "hidden" : ""  %>" >
        <% @customers.each do |customer| %>
        <%= link_to(edit_customer_path(customer)) do %>
        <div class='card'>
          <h3 class='mt-2 mb-0'><%= customer.compagny_name %></h3>
          <p>SIRET : <%= customer.siret %></p>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
