<div class="container">
  <div class="title">
    <h2><%= t 'customer.edit.title1' %></h2>
    <p><%= t 'customer.edit.p1' %></p>
  </div>
  <%= simple_form_for(@customer) do |f| %>
  <div class="inline">
    <%= f.input :compagny_name, label: "#{t 'customer.edit.label1' }" %>
    <%= f.input :siret, label: "#{t 'customer.edit.label2' }"  %>
  </div>
  <%= f.input :address, label: "#{t 'customer.edit.label3' }"  %>
  <div class="inline">
    <%= f.input :zip_code, label: "#{t 'customer.edit.label4' }"  %>
    <%= f.input :city, label: "#{t 'customer.edit.label5' }" %>
  </div>
  <%= f.input :country , as: :string, label: "#{t 'customer.edit.label6' }" %>
  <%= f.input :activity_code, label: "#{t 'customer.edit.label7' }"  %>
  <p><%= t 'customer.edit.p2' %>
  </p>
  <%= f.submit "#{t 'customer.edit.submit1' }" , class: 'btn btn-primary'  %>
  <%# probleme de boutton avec simple_form prend pas en compte la class peut etre change de simple avec tag par exemple ( cf index customers) %>
  <% end %>
</div>
