<div class="d-flex justify-content-around h-screen-withnavbar">
  <div class="bg-dark-blue col d-flex flex-column  align-items-center justify-content-center ">
    <h2 class='text-white mb-4'>Pas de code Partenaire ?</h2>
    <%= link_to "Obtenir votre code Partenaire", pages_intermediaire_path, class: 'btn btn-primary' %>
  </div>
  <div class="col d-flex flex-column  align-items-center justify-content-center">
    <div>

      <p class='mb-0 text-dark-blue'>Partenaire</p>
      <h2 class='text-dark-blue mb-4'>Accédez à votre espace</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t(".sign_in"), class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
